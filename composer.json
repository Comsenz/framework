{
    "name": "discuz/core",
    "description": "The Discuz Framework",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "illuminate/cache": "^6.0",
        "illuminate/container": "^6.0",
        "illuminate/database": "^6.0",
        "illuminate/bus": "^6.0",
        "illuminate/events": "^6.0",
        "illuminate/config": "^6.0",
        "illuminate/view": "^6.0",
        "illuminate/session": "^6.0",
        "illuminate/filesystem": "^6.0",
        "illuminate/validation": "^6.0",
        "illuminate/encryption": "^6.0",
        "illuminate/hashing": "^6.0",
        "illuminate/redis": "^6.0",
        "illuminate/notifications": "^6.0",
        "illuminate/queue": "^6.0",
        "monolog/monolog": "^2.0",
        "zendframework/zend-stratigility": "^3.2",
        "zendframework/zend-diactoros": "^2.1.3",
        "zendframework/zend-httphandlerrunner": "^1.1.0",
        "nikic/fast-route": "^1.3.0",
        "franzl/whoops-middleware": "^1.1.0",
        "tobscure/json-api": "^0.4.1",
        "dflydev/fig-cookies": "^2.0.0",
